@model VDMS.Models.ApplicationUser

@{
    ViewBag.Title = Model.Disabled ? "Enable" : "Disable";
}

<h2>Are you sure you want to @ViewBag.Title.ToLower() this user?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Disabled)
        </dt>
        <dd>
            @Html.CheckBoxFor(model => model.Disabled, new { disabled = "disabled" })
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@ViewBag.Title" class="btn btn-default" />
        </div>

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
